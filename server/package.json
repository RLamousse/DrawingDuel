{
  "name": "server",
  "description": "Projet de base pour le cours de LOG2990",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "start": "tsc && concurrently --kill-others \"tsc -w \" \"nodemon out/server/app/www.js\" ",
    "debug": "tsc && concurrently --kill-others \"tsc -w \" \"nodemon --inspect out/server/app/www.js\" ",
    "lint": "tslint --project tsconfig.json \"./app/**/*.ts\" --format stylish",
    "fix-lint": "tslint --project tsconfig.json \"./app/**/*.ts\" --format stylish --fix",
    "test": "mocha",
    "coverage": "nyc mocha --opts ./test/mocha.opts",
    "codecov": "codecov",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "clean": "rimraf out node_modules",
    "postinstall": "rimraf false"
  },
  "nyc": {
    "check-coverage": false,
    "per-file": true,
    "include": [
      "app/**/*.ts"
    ],
    "exclude": [
      "app/*.ts",
      "app/**/*.spec.ts",
      "app/models/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcovonly",
      "text",
      "text-summary"
    ],
    "all": true,
    "cache": true,
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@rmp135/imgur": "^0.4.1",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "config": "^3.0.1",
    "cookie-parser": "1.4.1",
    "cors": "2.8.4",
    "date-and-time": "^0.6.3",
    "debug": "^4.1.1",
    "express": "~4.16.0",
    "form-data": "^2.3.3",
    "fs": "0.0.1-security",
    "http-status-codes": "^1.3.0",
    "imgur": "^0.3.1",
    "inversify": "^4.13.0",
    "mongodb": "^3.1.13",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "nodemon": "^1.18.9",
    "reflect-metadata": "^0.1.10",
    "serve-favicon": "~2.5.0",
    "socket.io": "^2.2.0",
    "ts-node": "^7.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/chai": "~4.1.4",
    "@types/config": "0.0.34",
    "@types/cookie-parser": "1.4.1",
    "@types/cors": "2.8.4",
    "@types/date-and-time": "^0.6.0",
    "@types/express": "4.16.0",
    "@types/express-serve-static-core": "4.16.0",
    "@types/form-data": "^2.2.1",
    "@types/mocha": "5.2.5",
    "@types/mock-fs": "^3.6.30",
    "@types/mongodb": "^3.1.19",
    "@types/morgan": "~1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "~10.12.18",
    "@types/node-uuid": "0.0.28",
    "@types/sinon": "^7.0.3",
    "@types/socket.io": "^1.4.38",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "axios-mock-adapter": "^1.16.0",
    "chai": "~4.1.0",
    "codecov": "^3.2.0",
    "concurrently": "^4.0.1",
    "mocha": "~5.2.0",
    "mock-fs": "^4.7.0",
    "mock-socket": "^8.0.5",
    "nyc": "^13.3.0",
    "rimraf": "2.6.2",
    "sinon": "^7.2.2",
    "socket.io-client": "^2.2.0",
    "supertest": "^3.4.2",
    "ts-mockito": "^2.3.1",
    "tslint": "~5.11.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-microsoft-contrib": "5.2.0",
    "typemoq": "^2.1.0",
    "typescript": "~3.1.0"
  }
}
